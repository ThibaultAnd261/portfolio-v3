<script>
    const roleSelect = document.getElementById("roleSelect");
    const selectedText = document.getElementById("selectedText");

    function updateSkills(roleId: "frontend" | "backend") {
        if (selectedText) {
            selectedText.textContent =
                roleId === "frontend" ? "Front-end" : "Back-end";
        }

        document.querySelectorAll("[data-role]").forEach((section) => {
            const display =
                (section as HTMLElement).dataset.role === roleId
                    ? "block"
                    : "none";
            (section as HTMLElement).style.display = display;
        });
    }

    roleSelect?.addEventListener("click", (e) => {
        roleSelect.classList.toggle("active");
    });

    document.querySelectorAll(".role-option").forEach((option) => {
        option.addEventListener("click", (e) => {
            const value = (e.target as HTMLElement).dataset.value as
                | "frontend"
                | "backend";
            if (value) {
                updateSkills(value);
            }
        });
    });

    document.addEventListener("click", (e) => {
        if (roleSelect && !roleSelect.contains(e.target as Node)) {
            roleSelect.classList.remove("active");
        }
    });
</script>

