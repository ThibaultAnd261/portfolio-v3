---
import "../styles/color.css";
import profileImage from "../assets/img/me.png";
import { Icon } from "astro-icon/components";

// Statut disponible : "open" | "searching" | "unavailable" | null (pour masquer)
const status: "open" | "searching" | "unavailable" | null = "searching";

const statusConfig = {
    open: { label: "#OPENTOWORK", color: "#16a34a", colorEnd: "#22c55e" },
    searching: { label: "#SEARCHING", color: "#2563eb", colorEnd: "#3b82f6" },
    unavailable: { label: "#NOTAVAILABLE", color: "#dc2626", colorEnd: "#ef4444" },
};
---

<section class="hero fade-in-delay-1">
    <div class="hero-image">
        {status && (
            <span class={`status-badge status-${status}`}>
                {statusConfig[status].label}
            </span>
        )}
        <img src={profileImage.src} alt="Photo de profil" />
    </div>
    <div class="hero-content">
        <h1>Thibault Andriamasinoro</h1>
        <div class="subtitle">Ingénieur logiciel - Spécialisé en développement front-end</div>
        <p class="">Je transforme des problématiques complexes en interfaces fluides et intuitives. Mon objectif est de répondre à des besoins concrets en alliant la rigueur technique à une sensibilité créative. Je crée des solutions qui sont aussi performantes qu'agréables à utiliser.</p>

        <div class="social-links">
            <a href="https://www.linkedin.com/in/thibault-andriamasinoro/" class="social-link social-linkedin" target="_blank" rel="noopener noreferrer">
                <Icon name="simple-icons:linkedin" />
                <span>Thibault ANDRIAMASINORO</span>
            </a>
            <a href="https://github.com/ThibaultAnd261" class="social-link social-github" target="_blank" rel="noopener noreferrer">
                <Icon name="simple-icons:github" />
                <span>ThibaultAnd261</span>
            </a>
            <a href="mailto:thibaultandpro@gmail.com" class="social-link social-email">
                <Icon name="simple-icons:gmail" />
                <span>thibaultandpro@gmail.com</span>
            </a>
            <a href="tel:+33767686487" class="social-link social-phone">
                <Icon name="simple-icons:whatsapp" />
                <span>Téléphonez-moi</span>
            </a>
            <a href="/cv.pdf" target="_blank" class="social-link social-cv">
                <Icon name="simple-icons:readthedocs" />
                <span>CV</span>
            </a>
        </div>
    </div>
</section>

<style>
    .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
        text-align: center;
    }

    .hero-image {
        flex-shrink: 0;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .status-badge {
        position: absolute;
        top: -8px;
        left: 50%;
        transform: translateX(-50%);
        padding: 0.25rem 0.6rem;
        border-radius: 4px;
        font-family: 'Karla', sans-serif;
        font-size: 0.65rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        color: white;
        z-index: 2;
    }

    .status-open {
        background-color: #16a34a;
    }

    .status-searching {
        background-color: #2563eb;
    }

    .status-unavailable {
        background-color: #dc2626;
    }

    .hero-image img {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        border: 4px solid var(--charcoal);
        object-fit: cover;
        box-shadow: 8px 8px 0 var(--copper);
        transition: all 0.4s var(--transition-smooth);
    }

    .hero-image img:hover {
        transform: translateY(-4px) translateX(-4px);
        box-shadow: 12px 12px 0 var(--copper);
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .hero-content h1 {
        font-family: 'DM Serif Display', serif;
        font-size: clamp(2rem, 5vw, 4rem);
        line-height: 1.1;
        color: var(--charcoal);
        margin-bottom: 1rem;
    }

    .subtitle {
        font-family: 'Karla', sans-serif;
        font-size: clamp(1.1rem, 2.5vw, 1.6rem);
        font-weight: 600;
        color: var(--copper);
        margin-bottom: 1rem;
    }

    .hero-content p {
        font-size: 1rem;
        max-width: 500px;
        opacity: 0.85;
        color: var(--charcoal);
        line-height: 1.6;
    }

    .social-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.6rem;
        margin-top: 1.25rem;
    }

    .social-link {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 0.75rem;
        border-radius: 6px;
        font-family: 'Karla', sans-serif;
        font-size: 0.9rem;
        font-weight: 500;
        color: white;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .social-link:hover {
        transform: translateY(-2px);
        filter: brightness(1.1);
    }

    .social-link svg,
    .social-link [data-icon] {
        flex-shrink: 0;
        display: block;
        width: 16px;
        height: 16px;
    }

    .social-linkedin {
        background-color: #0077B5;
    }

    .social-github {
        background-color: #181717;
    }

    .social-twitter {
        background-color: #000000;
    }

    .social-email {
        background-color: #EA4335;
    }

    .social-phone {
        background-color: #25D366;
    }

    .social-cv {
        background-color: var(--copper);
    }

    /* Tablet */
    @media (min-width: 768px) {
        .hero {
            padding: 3rem 2rem;
            gap: 2.5rem;
        }

        .hero-image img {
            width: 200px;
            height: 200px;
        }

        .hero-content p {
            font-size: 1.1rem;
            max-width: 550px;
        }
    }

    /* Desktop */
    @media (min-width: 1025px) {
        .hero {
            flex-direction: row;
            text-align: left;
            padding: 4rem 2rem 3rem;
            gap: 4rem;
        }

        .hero-image img {
            width: 240px;
            height: 240px;
        }

        .hero-content {
            align-items: flex-start;
        }

        .social-links {
            justify-content: flex-start;
        }

        .hero-content p {
            max-width: 100%;
        }
    }
</style>
