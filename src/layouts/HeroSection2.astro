---
import { skills } from "../data/skills";
import Button from "../components/Button.astro";
---

<section class="section-hero">
    <div class="container bg-gradient-warm-light">
        <div class="hero-content">
            <div class="hero-left">
                <img
                    src="/src/assets/img/me.png"
                    alt="Thibault A."
                    class="hero-left-img"
                />
            </div>

            <div class="hero-right">
                <div class="hero-info">
                    <div class="hero-info-title">
                        <div class="hero-info-name-social mobile-tablet">
                            <h4>Thibault Andriamasinoro</h4>
                            <div class="hero-info-social">
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    class="social-link"
                                >
                                    <i class="fa-brands fa-linkedin"></i>
                                </a>
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    class="social-link"
                                >
                                    <i class="fa-brands fa-github"></i>
                                </a>
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    class="social-link"
                                >
                                    <i class="fa-brands fa-x-twitter"></i>
                                </a>
                            </div>
                            <h5>Ingénieur logiciel - spécialisé en développement web</h5>
                        </div>

                        <div class="hero-info-name-social desktop">
                            <div class="hero-info-left">
                                <h4>Thibault Andriamasinoro</h4>
                                <h5>Ingénieur logiciel - spécialisé en développement web</h5>
                            </div>
                            <div class="hero-info-social">
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    class="social-link"
                                >
                                    <i class="fa-brands fa-linkedin"></i>
                                </a>
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    class="social-link"
                                >
                                    <i class="fa-brands fa-github"></i>
                                </a>
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    class="social-link"
                                >
                                    <i class="fa-brands fa-x-twitter"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="hero-skills">
                    <div class="skills-category">
                        <Button title="Développement web" link="" />
                        <Button title="Programmation" link="" />
                        <Button title="Outils" link="" />
                        <Button title="Loisirs" link="" />
                    </div>
                    <div class="skills-grid">
                        {skills.map((skill) => (
                            <div class="skill-item">
                                <img src={skill.icon} alt={skill.alt} width={skill.width} height={skill.height} />
                                <span>{skill.name}</span>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .section-hero {
        background-color: var(--beige-bg1-light);
        padding: 4rem 2rem;
    }

    .container {
        max-width: 1500px;
        margin: 0 auto;
        border-radius: 1rem;
        border: 1px solid var(--black-soft);
        box-shadow: 2px 1px 1px 1px var(--black-soft);
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .hero-left {
        width: auto;
        margin: 2rem 1rem;
        display: flex;
        justify-content: center;
    }

    .hero-left-img {
        width: 150px;
        border-radius: 50%;
        border: 4px solid var(--beige-borders-light);
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
    }

    .hero-right {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .hero-info {
        padding: 0rem 2rem;
        text-align: center;
    }

    .hero-info-title {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .hero-info-name-social {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .social-link {
        text-decoration: none;
        color: inherit;
        font-size: 1.5rem;
        display: inline-flex;
        align-items: center;
        line-height: 0;
    }

    .social-link:hover {
        color: var(--amber-solid-light);
    }

    .hero-skills {
        text-align: center;
        padding: 2rem;
        border-radius: 1rem;
    }

    .skills-category {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .skills-grid {
        display: grid;
        /* grid-template-columns: repeat(auto-fit, minmax(80px, 1fr)); */
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
        max-height: 15rem;
        overflow-y: auto;
        padding: 0.5rem;
    }

    .skill-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 3rem;
        background-color: var(--beige-borders-light);
        border-radius: 0.5rem;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .skill-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, var(--amber-solid-light) 0%, var(--beige-borders-light) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 1;
    }

    .skill-item:hover::before {
        opacity: 1;
    }

    .skill-item img,
    .skill-item span {
        position: relative;
        z-index: 2;
    }

    .skill-item:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .mobile-tablet {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .desktop {
        display: none;
    }

    .hero-info-social {
        display: flex;
        gap: 1rem;
    }

    /* Desktop styles */
    @media (min-width: 768px) {
        .hero-content {
            flex-direction: row;
            align-items: start;
        }

        .hero-left {
            width: auto;
        }

        .hero-info {
            /* padding: 2rem; */
            text-align: left;
        }

        .hero-info-title {
            align-items: flex-start;
        }

        .mobile-tablet {
            align-items: start;
        }

        .hero-right {
            padding: 2rem;
            gap: 2rem;
        }

        .hero-info {
            padding: 0;
        }

        .hero-skills {
            padding: 0;
            text-align: left;
        }

        .skills-category {
            display: grid;
            grid-template-columns: repeat(4, 0.5fr);
            gap: 1rem;
            margin-bottom: 2rem;
        }
    }

    @media (min-width: 1024px) {
        .hero-info-name-social {
            width: 100%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .hero-info-social {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .mobile-tablet {
            display: none;
        }

        .desktop {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: start;
        }

        .desktop .hero-info-social {
            flex-direction: column;
        }

        .hero-info-left {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .hero-skills {
            padding: 0;
        }

        .skills-grid {
            max-height: 100%;
        }
    }

    @media (max-width: 768px) {
        .skills-category {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
