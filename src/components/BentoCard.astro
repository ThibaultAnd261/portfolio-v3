---
import "../styles/color.css";

interface Props {
    tag?: string;
    title?: string;
    description?: string;
    emoji?: string;
    variant?: 'default' | 'stat' | 'testimonial' | 'contact' | 'skills';
    statValue?: string;
    statLabel?: string;
    skills?: string[];
    testimonialText?: string;
    testimonialAuthor?: string;
    ctaText?: string;
    ctaLink?: string;
}

const {
    tag,
    title,
    description,
    emoji,
    variant = 'default',
    statValue,
    statLabel,
    skills,
    testimonialText,
    testimonialAuthor,
    ctaText,
    ctaLink
} = Astro.props;
---

<div class={`bento-card bento-card--${variant}`}>
    <div class="card-content">
        {tag && <span class="card-tag">{tag}</span>}

        {variant === 'stat' && (
            <div class="stat-container">
                <span class="stat-value">{statValue}</span>
                <span class="stat-label">{statLabel}</span>
            </div>
        )}

        {variant === 'testimonial' && (
            <div class="testimonial-container">
                <p class="testimonial-text">"{testimonialText}"</p>
                <span class="testimonial-author">- {testimonialAuthor}</span>
            </div>
        )}

        {variant === 'skills' && skills && (
            <>
                {title && <h3 class="card-title">{title}</h3>}
                <div class="skills-list">
                    {skills.map((skill) => (
                        <span class="skill-tag">{skill}</span>
                    ))}
                </div>
            </>
        )}

        {variant === 'contact' && (
            <>
                {title && <h3 class="card-title">{title}</h3>}
                {description && <p class="card-description">{description}</p>}
                {ctaText && ctaLink && (
                    <a href={ctaLink} class="cta-button">{ctaText}</a>
                )}
            </>
        )}

        {variant === 'default' && (
            <>
                {title && <h3 class="card-title">{title}</h3>}
                {description && <p class="card-description">{description}</p>}
                {emoji && (
                    <div class="project-image">
                        <span class="project-emoji">{emoji}</span>
                    </div>
                )}
                {ctaText && ctaLink && (
                    <a href={ctaLink} class="cta-button">{ctaText}</a>
                )}
            </>
        )}
    </div>
</div>

<style>
    .bento-card {
        position: relative;
        background: var(--cream);
        border: 4px solid var(--charcoal);
        border-radius: 16px;
        padding: 1.5rem;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s var(--transition-smooth);
        transform-origin: center;
        height: 100%;
        display: flex;
        flex-direction: column;
        min-height: 0;
    }

    .bento-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--clay) 0%, var(--copper) 100%);
        opacity: 0;
        transition: opacity 0.8s ease;
        z-index: 0;
        border-radius: 12px;
    }

    .bento-card:hover {
        transform: translateY(-8px) translateX(-2px) rotate(-0.5deg);
        box-shadow: 12px 12px 0 var(--copper);
    }

    .bento-card:hover::before {
        opacity: 0.1;
    }

    .card-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        flex: 1;
        min-height: 0;
        overflow: hidden;
    }

    .card-tag {
        display: inline-block;
        padding: 0.4rem 0.8rem;
        background: var(--sand);
        border: 2px solid var(--charcoal);
        border-radius: 24px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1rem;
        width: fit-content;
    }

    .card-title {
        font-family: 'DM Serif Display', serif;
        font-size: clamp(1.3rem, 2.5vw, 1.8rem);
        color: var(--terracotta);
        margin-bottom: 0.75rem;
        line-height: 1.2;
    }

    .card-description {
        font-size: 0.95rem;
        line-height: 1.5;
        color: var(--charcoal);
        opacity: 0.85;
    }

    .project-image {
        width: 100%;
        height: 120px;
        background: linear-gradient(135deg, var(--clay) 0%, var(--terracotta) 100%);
        border: 3px solid var(--charcoal);
        border-radius: 12px;
        margin-top: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .project-emoji {
        font-size: 2.5rem;
    }

    /* Skills variant */
    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: auto;
    }

    .skill-tag {
        padding: 0.4rem 0.75rem;
        background: var(--charcoal);
        color: var(--cream);
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* Stat variant */
    .bento-card--stat {
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .bento-card--stat .card-content {
        justify-content: center;
        align-items: center;
    }

    .stat-container {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        align-items: center;
    }

    .stat-value {
        font-family: 'DM Serif Display', serif;
        font-size: clamp(2rem, 4vw, 3.5rem);
        color: var(--terracotta);
        line-height: 1;
    }

    .stat-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--charcoal);
        opacity: 0.85;
    }

    /* Testimonial variant */
    .bento-card--testimonial .card-content {
        justify-content: center;
    }

    .testimonial-container {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .testimonial-text {
        font-family: 'DM Serif Display', serif;
        font-size: clamp(1rem, 1.5vw, 1.2rem);
        font-style: italic;
        color: var(--charcoal);
        line-height: 1.4;
    }

    .testimonial-author {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--copper);
    }

    /* Contact variant */
    .bento-card--contact {
        background: var(--terracotta);
        color: var(--cream);
    }

    .bento-card--contact .card-content {
        justify-content: center;
    }

    .bento-card--contact .card-title {
        color: var(--cream);
    }

    .bento-card--contact .card-description {
        color: var(--cream);
        opacity: 0.9;
    }

    .bento-card--contact::before {
        display: none;
    }

    /* CTA Button */
    .cta-button {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.75rem 1.5rem;
        background: var(--terracotta);
        color: var(--cream);
        text-decoration: none;
        border: 3px solid var(--charcoal);
        border-radius: 10px;
        font-weight: 700;
        font-size: 0.9rem;
        transition: all 0.3s var(--transition-smooth);
        box-shadow: 3px 3px 0 var(--charcoal);
        width: fit-content;
    }

    .cta-button:hover {
        transform: translate(-2px, -2px);
        box-shadow: 5px 5px 0 var(--charcoal);
    }

    .bento-card--contact .cta-button {
        background: var(--cream);
        color: var(--terracotta);
    }

    /* Desktop adjustments */
    @media (min-width: 1025px) {
        .bento-card {
            padding: 1.75rem;
        }

        .card-tag {
            font-size: 0.8rem;
            padding: 0.5rem 1rem;
        }

        .project-image {
            height: 160px;
        }

        .project-emoji {
            font-size: 3rem;
        }
    }
</style>
